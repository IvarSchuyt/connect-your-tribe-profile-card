<!-- tekstballon met muzieksuggestie en auteur -->
<div class="music-suggestions"><h3>Music suggestions:</h3>
<% member.shouts.forEach(shout => { %>
<section>
  <h4><%= shout.author %></h3>
  <p><%= shout.text %></p>
</section>
<% }) %>

<!-- veld waar auteur naam en bericht in kan vullen -->
<form action="/" method="post">
  <input type="hidden" name="id" id="id" value="<%= member.id %>" />

  <label for="author">Author:</label>
  <input type="text" name="author" id="author"/>

  <label for="text">Suggest a song:</label>
  <textarea name="text" id="text" cols="30" rows="2"></textarea>

  <input type="submit" value="Post!" class="button-post"/>
</form>
</div>
